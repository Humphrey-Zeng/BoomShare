<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.humphrey.boomshare"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.SelectFolderActivity"/>
        <activity android:name=".activity.SelectPictureActivity">
        </activity>
        <activity android:name=".activity.PhotoViewActivity">
        </activity>
        <activity android:name=".activity.NoteViewActivity">
        </activity>
    </application>

</manifest>
