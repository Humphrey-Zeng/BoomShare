<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <FrameLayout
        android:id="@+id/fl_item_select_folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <com.humphrey.boomshare.view.MyImageView
            android:id="@+id/photo_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_default"
            />


    </FrameLayout>


    <CheckBox
        android:id="@+id/cb_photo_select"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/cb_item_selector"
        android:button="@null"
        android:focusable="false"
        />

    <TextView
        android:id="@+id/tv_item_photo_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="5"
        android:textColor="#ffff4444"
        android:textSize="20sp"
        android:visibility="gone"
        />


</RelativeLayout>