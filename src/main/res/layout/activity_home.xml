<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_home"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        layout="@layout/app_bar_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_tab_home"
            style="@style/BottomTabStyle"
            android:src="@drawable/btn_tab_home"
            />

        <ImageView
            android:id="@+id/btn_tab_send"
            style="@style/BottomTabStyle"
            android:src="@drawable/btn_tab_send"
            />

        <ImageView
            android:id="@+id/btn_tab_personal"
            style="@style/BottomTabStyle"
            android:src="@drawable/btn_tab_personal"
            />

        <ImageView
            android:id="@+id/btn_tab_setting"
            style="@style/BottomTabStyle"
            android:src="@drawable/btn_tab_setting"
            />


    </LinearLayout>


</RelativeLayout>
